		var sendObj = {
			ball_samp_time: 0.00,
			speed_up_fact: 0.00,
			start_button: 0,
			stop_button: 0,
			hit_01: 0,
			hit_02: 0,
			place_ball_1: 0,
			place_ball_2: 0
		};
		var sendObj2 = {
			ball_samp_time: 0.00,
			speed_up_fact: 0.00,
			game_id: 0,
			play_num: 0,
			isAddrChange: false,
